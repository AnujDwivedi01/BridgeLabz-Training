SELECT
    ->     v.visit_date,
    ->     d.doctor_name,
    ->     v.diagnosis
    -> FROM visits v
    -> JOIN doctors d ON v.doctor_id = d.doctor_id
    -> WHERE v.patient_id = 1
    -> ORDER BY v.visit_date;
